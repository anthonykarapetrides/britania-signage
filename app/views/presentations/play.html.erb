<div class="row">
  <div class="col-lg-4">
    <div class="col-lg-4">
      <%= image_tag 'new_logo_britania_2.png' %>
    </div>
    <div class="col-lg-8">
      <div class="date_here text-center">
        <% time_now = DateTime.now %>
        <h3 style="margin-top: 10px;">
          <% day = time_now.day %>
          <%= time_now.strftime("%A") %><br>
          <%= time_now.strftime("#{day.ordinalize} %B %Y") %>
        </h3>
        <h3 style="margin-top: 10px;">
          <span class="text-muted time_here"><%= time_now.strftime('%H:%M:%S') %></span>
        </h3>
      </div>
    </div>

  </div>
  <div class="col-lg-8 text-center">
    <div id="weather">
      <div class="col-lg-5">
        <div id="weather_now">
          <div class="row">
            <div class="col-lg-6"><img class="weather_img" src=""></div>
            <div class="col-lg-6 text-left">
              <h2 style="margin-top: 2px; margin-bottom: 0px;">
                <span class="temp"></span><br>
                <small>
                  <span class="condition"></span><br>
                  <small>
                    Wind <span class="wind"></span>
                  </small>
                </small>

              </h2>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-7">
        <div id="weather_forecast">
          <div class="col-md-3 day1">
            <strong><span class="day_name"></span></strong><br>
            <img class="weather_img" src="">
            <span class="temps small text-muted"></span>
          </div>
          <div class="col-md-3 day2">
            <strong><span class="day_name"></span></strong><br>
            <img class="weather_img" src="">
            <span class="temps small text-muted"></span>
          </div>
          <div class="col-md-3 day3">
            <strong><span class="day_name"></span></strong><br>
            <img class="weather_img" src="">
            <span class="temps small text-muted"></span>
          </div>
          <div class="col-md-3 day4">
            <strong><span class="day_name"></span></strong><br>
            <img class="weather_img" src="">
            <span class="temps small text-muted"></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row" style="max-height: 341px;">
  <div class="col-lg-6">
    <div class="well">
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <div class="carousel-inner">
          <% imgs = ["images/1.jpg", "images/2.jpg", "images/3.jpg"] %>
          <% public_dir = 'https://dl.dropboxusercontent.com/u/195982051/' %>
          <% imgs.each_with_index do |img, i| %>
              <div class="item <%= 'active' if i == 0 %>">
                <%= image_tag (public_dir + img), :class => 'img-responsive', :style => 'max-height: 200px;' %>
              </div>
          <% end %>
          <!--<div class="item active">-->
            <!--<%#= image_tag 'new_logo_britania_1.png' %>-->
          <!--</div>-->
          <!--<div class="item">-->
            <!--<%#= image_tag 'new_logo_britania_2.png' %>-->
          <!--</div>-->
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="well">
      <div id="calendar"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-4">
    <div class="panel panel-small panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Word of the Day</h3>
      </div>
      <div id="wotd" class="panel-body">
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="panel panel-small panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Quote of the Day</h3>
      </div>
      <div id="qotd" class="panel-body">

      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="panel panel-small panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Today's Namedays</h3>
      </div>
      <div id="ndays" class="panel-body">

      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div id="news_feed_here" class="marquee"></div>
  </div>
</div>

<script type="text/javascript">
    weather_widget.update_weather();
    time.auto_update();
    calendar.init();
    news_feed.init();
    feed_content.init();
</script>
