<div class="row">
  <div class="col-lg-4">
    <div class="col-lg-4">
      <%= image_tag 'new_logo_britania_2.png' %>
    </div>
    <div class="col-lg-8">
      <div class="date_here text-center">
        <% time_now = DateTime.now %>
        <h3 style="margin-top: 10px;">
          <% day = time_now.day %>
          <%= time_now.strftime("%A") %><br>
          <%= time_now.strftime("#{day.ordinalize} %B %Y") %>
        </h3>
        <h3 style="margin-top: 10px;">
          <span class="text-muted time_here"><%= time_now.strftime('%H:%M:%S') %></span>
        </h3>
      </div>
    </div>

  </div>
  <div class="col-lg-8 text-center">
    <div id="weather">
      <div class="col-lg-5">
        <div id="weather_now">
          <div class="row">
            <div class="col-lg-6"><img class="weather_img" src=""></div>
            <div class="col-lg-6 text-left">
              <h2 style="margin-top: 2px; margin-bottom: 0px;">
                <span class="temp"></span><br>
                <small>
                  <span class="condition"></span><br>
                  <small>
                    Wind <span class="wind"></span>
                  </small>
                </small>

              </h2>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-7">
        <div id="weather_forecast">
          <div class="col-md-3 day1">
            <strong><span class="day_name"></span></strong><br>
            <img class="weather_img" src="">
            <span class="temps small text-muted"></span>
          </div>
          <div class="col-md-3 day2">
            <strong><span class="day_name"></span></strong><br>
            <img class="weather_img" src="">
            <span class="temps small text-muted"></span>
          </div>
          <div class="col-md-3 day3">
            <strong><span class="day_name"></span></strong><br>
            <img class="weather_img" src="">
            <span class="temps small text-muted"></span>
          </div>
          <div class="col-md-3 day4">
            <strong><span class="day_name"></span></strong><br>
            <img class="weather_img" src="">
            <span class="temps small text-muted"></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row" style="max-height: 341px;">
  <div class="col-lg-6">
    <div class="well well-sm">
      <div id="carousel-example-generic" class="carousel slide">
        <!-- Indicators -->
        <div class="carousel-inner">
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="well well-sm">
      <div id="calendar"></div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-4">
    <div id="wotd" class="panel panel-small panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <small>Word of the day</small>
          <span class="pull-right title_here"></span>
        </h3>
      </div>
      <div class="panel-body">
        <div class="media">
          <div class="media-body description_here">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div id="qotd" class="panel panel-small panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <small>Quote of the day</small>
          <span class="pull-right title_here"></span>
        </h3>
      </div>
      <div class="panel-body">
        <div class="media">
          <a class="pull-left" href="#">
            <img class="media-object img-thumbnail image_here" src="" >
          </a>
          <div class="media-body">
            <blockquote class="blockquote-reverse blockquote-slim">
              <p class="description_here"></p>
            </blockquote>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-4">
    <div id="ndays" class="panel panel-small panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><small>Today's Namedays</small></h3>
      </div>
      <div class="panel-body">
        <div class="media">
          <div class="media-body description_here"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div id="news_feed_here" class="marquee"></div>
  </div>
</div>

<script type="text/javascript">
  time.auto_update();
  weather_widget.init();
  carousel_imgs.init();
  calendar.init();
  news_feed.init();
  feed_content.init();
</script>
